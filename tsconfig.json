{
  "compilerOptions": {
    "target": "ES2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,

    "sourceMap": true,
    "sourceRoot": "./",
    "declarationMap": true,

    "jsx": "react",
    "module": "ESNext",
    "declaration": true,

    "outDir": "dist",
    "moduleResolution": "NodeNext"
  },
  "include": ["src/lib"]
}
