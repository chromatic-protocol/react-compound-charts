{
  "compilerOptions": {
    "target": "ES2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
  },
  "include": ["src/lib"]
}
